      <Path>%LOCALAPPDATA%\Programs\Microsoft VS Code\Code.exe</Path>
      <ToolDir>%LOCALAPPDATA%\Programs\Microsoft VS Code</ToolDir>
      <Arguments>
        <Arg>%OpenFolder%</Arg>
      </Arguments>
